# Linxo Agent Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git!

# Linxo Credentials
LINXO_EMAIL=your-email@example.com
LINXO_PASSWORD=your-password

# Email Configuration
SENDER_EMAIL=sender@example.com
SENDER_PASSWORD=your-app-password
NOTIFICATION_EMAIL=recipient@example.com

# SMS Configuration (OVH)
OVH_APP_KEY=your-ovh-app-key
OVH_APP_SECRET=your-ovh-app-secret
OVH_CONSUMER_KEY=your-ovh-consumer-key
OVH_SERVICE_NAME=sms-serviceXXXXXX-X
SMS_SENDER=YourAppName
SMS_RECIPIENT=+33XXXXXXXXX

# Budget Configuration
BUDGET_VARIABLE=1323.73

# Domain Configuration (for SSL)
DOMAIN_NAME=your-domain.com
ADMIN_EMAIL=admin@your-domain.com
